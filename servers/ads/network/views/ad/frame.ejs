<html>
  <head>
    <style>
      html, body {
        background: #f8f8f8;
        padding: 0;
        margin: 0;
      }
      
      img {
        width: 100%;
        height: 100%;
      }
    </style>
    <script>
      window["<%= publisher.key %>"] = { in_frame: true };      
      <%- miza_script %>
      window.parent.window.postMessage({
        name: "frame.show",
        frame: "<%= frame %>",
        width: <%= payload.width %>,
        height: <%= payload.height %>
      }, "*")
    </script>
  </head>
  <body>
    <% if(!!payload.target) { %>
      <a target="_blank" href="/<%= new Buffer(payload.target).toString("base64") %>?link">
        <img src="<%= payload.link %>"/>
      </a>
    <% } else { %> 
      <img src="<%= payload.link %>"/>
    <% } %>
    <% payload.beacons.forEach(function(beacon) { %>
      <img src="/<%= new Buffer(beacon).toString("base64") %>" width="0" height="0" style="display:none" />
    <% }) %>
  </body>
</html>