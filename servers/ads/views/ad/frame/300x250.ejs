<html>
  <head>
    <style>
      html, body {
        background: transparent;
        padding: 0;
        margin: 0;
        overflow: hidden;
        font-family: "Arial";
      }
      
      a {
        width: 100%;
        color: black;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
        border: solid 1px rgba(0,0,0,0.1);
        overflow: hidden;
        box-sizing: border-box;
      }
      
      a:hover {
        text-decoration: underline;
      }
      
      a table {
        width: 100%;
        height: 250px;
        background: white;
        padding: 0;
        margin: 0;
        border-collapse: collapse;
      }
      
      a table tr:first-child td {
        padding: 0;
        margin: 0;
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
      }
      
      a table tr:nth-child(2) td {
        font-family: "Arial";
        padding: 5px;
        box-sizing: border-box;
        font-size: 14px;
        line-height: 17px;
        box-shadow: 0 -1px 0 rgba(0,0,0,0.1);
        height: 20px;
        box-sizing: border-box;
      }
    </style>
    <script>
      window["<%= publisher.key %>"] = { 
        frame: "<%= frame %>",
        creative: "<%= creative.id || "" %>",
        advertiser: "<%= creative.advertiser_id || "" %>",
        campaign: "<%= creative.campaign_id || "" %>",
        industry: "<%= creative.industry_id || "" %>"
      };      
      
      window.parent.window.postMessage({
        name: "frame.show",
        frame: "<%= frame %>",
        width: 300,
        height: 280
      }, "*");
      
      <%- miza_script %>
    </script>
  </head>
  <body>
    <a target="_blank" href="/<%= creative.attributed_link(publisher.id, creative.industry_id, is_protected, demo) %>">
      <table>
        <tr>
          <td style='background-image: url("data:image;base64,<%= creative.image.toString('base64') %>")'></td>
        </tr>
        <% if(!!creative.description) { %>
          <tr>
            <td><%- creative.description_html %></td>
          </tr>
        <% } %>
      </table>
    </a>
    <% include ./footer %>
  </body>
</html>