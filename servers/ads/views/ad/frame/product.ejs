<% height = 340 %>
<html>
  <head>
    <style>
      html, body {
        background: transparent;
        padding: 0;
        margin: 0;
        overflow: hidden;
        font-family: "Arial";
      }
      
      .container {
        position: relative;
        width: 100%;
        height: <%- height - 25 %>px;
        color: black;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
        border: solid 1px #E6E6E6;
        overflow: hidden;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        background: white;
      }
      
      .clear {
        float: none;
        clear: both;
      }
      
      .background-image {
        width: 100%;
        height: 58%;
        background-position: center center;
        background-size: contain;
        background-repeat: no-repeat;
      }
      
      .bottom {
        width: 100%;
        padding: 10px 12.5px;
        box-sizing: border-box;
      }
      
      .bottom .product-information {
        color: #14171A;
        overflow: hidden;
        font-weight: 600;
        margin-top: 15px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
      }
      
      .bottom .product-information strong:hover,
      .bottom .product-information span:hover {
        text-decoration: underline;
      }
      
      .bottom .product-information span {
        font-weight: lighter; 
        color: #657786;
        font-size: 0.8em;
        margin-top: 5px;
        display: block;
      }
      
      .bottom .product-description {
        width: 70%;
        font-weight: normal;
        font-size: 14px;
        color: #14171A;
      }
      
      .bottom .product-additional {
        margin-top: 20px;
      }
      
      .bottom .button {
        color: black !important;
        background: #F4D27E;
        font-weight: 600 !important;
        padding: 10px;
        border-radius: 3px;
        cursor: pointer;
        font-size: 15px;
        display: inline-block;
        text-align: center;
        box-sizing: border-box;
      }
      
      .bottom .button:hover {
        background: #ecb837 !important;
      }
      
      .clear {
        float: none;
        clear: both;
      }
    </style>
    <script>
      window["<%= publisher.key %>"] = { 
        frame: "<%= frame %>",
        creative: "<%= creative.id || "" %>",
        advertiser: "<%= creative.advertiser_id || "" %>",
        campaign: "<%= creative.campaign_id || "" %>",
        industry: "<%= creative.industry_id || "" %>"
      };      
      
      window.parent.window.postMessage({
        name: "frame.show",
        frame: "<%= frame %>",
        width: <%- width %>,
        height: <%- height %>
      }, "*");
      
      <% if(!demo) { %>
        <%- miza_script %>
      <% } %>
    </script>
  </head>
  <body>
    <a class="container" target="_blank" href="/<%= creative.attributed_link(publisher.id, creative.industry_id, is_protected, demo) %>">
      <div class="background-image" style="background-image: url(<%= creative.config.product.image %>)"></div>
      <div class="bottom">
        <div style="text-align: center">
          <div class="button"><%= creative.config.action || "Follow" %></div>
        </div>
        <div class="product-information">
          <strong><%= creative.config.product.title %></strong>
          <span>
          <%= creative.config.product.brand.name %><% if(!!creative.config.product.additional) { 
            %>&nbsp;&nbsp;&bull;&nbsp;&nbsp;<%= creative.config.product.additional %><% 
          } %></span>
        </div>
        <div class="clear"></div>
      </div>
    </a>
    <% include ./footer %>
  </body>
</html>