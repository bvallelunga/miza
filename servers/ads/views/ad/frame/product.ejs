<% height = 370 %>
<html>
  <head>
    <style>
      html, body {
        background: transparent;
        padding: 0;
        margin: 0;
        overflow: hidden;
        font-family: "Arial";
      }
      
      .container {
        position: relative;
        width: 100%;
        height: <%- height - 25 %>px;
        color: black;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
        border: solid 1px #E6E6E6;
        overflow: hidden;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        background: white;
      }
      
      .clear {
        float: none;
        clear: both;
      }
      
      .slider {
        position: absolute;
        top: 10px;
        left: 50px;
        right: 50px;
        background: rgba(255, 255, 255, 0.6);
        height: 2px;
        border-radius: 15px;
        overflow: hidden;
        z-index: 1;
      }
      
      .slider .slide {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        width: 0;
        background: white;
      }
      
      .grid {
        width: 100%;
        height: 71%;
        overflow: hidden;
        position: relative;
        margin: 0;
        padding: 0;
      }
      
      .grid .image {
        width: 100%;
        height: 100%;
        background-color: white;
        background-position: top center;
        background-repeat: no-repeat;
        background-size: cover;
        margin-top: 1px;
        display: none;
        position: absolute;
        top: -1px;
        z-index: 0;
      }
      
      .grid .image:first-child {
        margin: 0;
      }
      
      .bottom {
        width: 100%;
        padding: 10px 12.5px;
        box-sizing: border-box;
      }
      
      .bottom .product-information {
        color: #14171A;
        overflow: hidden;
        font-weight: 600;
        margin-top: 15px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
        box-sizing: border-box;
      }
      
      .bottom .product-information strong:hover,
      .bottom .product-information span:hover {
        text-decoration: underline;
      }
      
      .bottom .product-information span {
        font-weight: lighter; 
        color: #657786;
        font-size: 0.8em;
        margin-top: 5px;
        display: block;
      }
      
      .bottom .product-description {
        width: 70%;
        font-weight: normal;
        font-size: 14px;
        color: #14171A;
      }
      
      .bottom .product-additional {
        margin-top: 20px;
      }
      
      .bottom .button-wrapper {
        margin-top: -35px;
        border: solid 3px white;
        border-radius: 3px;
        position: relative;
        z-index: 10000;
        display: inline-block;
      }
      
      .bottom .button {
        color: white !important;
        background: #F56400;
        font-weight: 600 !important;
        padding: 10px 15px;
        cursor: pointer;
        font-size: 15px;
        display: inline-block;
        text-align: center;
        box-sizing: border-box;
      }
      
      .bottom .button:hover {
        background: #cd5300 !important;
      }
      
      .clear {
        float: none;
        clear: both;
      }
    </style>
    <script>
      window["<%= publisher.key %>"] = { 
        frame: "<%= frame %>",
        creative: "<%= creative.id || "" %>",
        advertiser: "<%= creative.advertiser_id || "" %>",
        campaign: "<%= creative.campaign_id || "" %>",
        industry: "<%= creative.industry_id || "" %>"
      };      
      
      window.parent.window.postMessage({
        name: "frame.show",
        frame: "<%= frame %>",
        width: <%- width %>,
        height: <%- height %>
      }, "*");
      
      <% if(!demo) { %>
        <%- miza_script %>
      <% } %>
    </script>
  </head>
  <body>
    <a class="container" target="_blank" href="/<%= creative.attributed_link(publisher.id, creative.industry_id, is_protected, demo) %>">
      <div class="grid">
        <div class="slider" <% if(creative.config.images.length < 2) { %>style="display: none"<% } %>>
          <div class="slide"></div>
        </div>
        <% creative.config.images.forEach(function(image) { %>
          <div class="image" style="background-image: url(<%= image %>)"></div>
        <% }) %>
      </div>
      <div class="bottom">
        <div style="text-align: center">
          <div class="button-wrapper">
            <div class="button"><%= creative.config.action || "Follow" %></div>
          </div>
        </div>
        <div class="product-information">
          <strong><%= creative.config.product.title %></strong>
          <span>
          <%= creative.config.product.brand.name %><% if(!!creative.config.product.additional) { 
            %>&nbsp;&nbsp;&bull;&nbsp;&nbsp;<%= creative.config.product.additional %><% 
          } %></span>
        </div>
        <div class="clear"></div>
      </div>
    </a>
    <script>
      var slider = document.getElementsByClassName("slide")[0]
      var images = document.getElementsByClassName("image")
      images = Array().slice.call(images || [])
      
      show_slide = function(index) {      
        images[index].style.display = "block"
        slider.style.width = "0%"
        
        var count = 0
        var time = 5000
        var interval = setInterval(function() {
          count += 10
          slider.style.width = (count/time * 100) + "%"
          
          if(count > time) {
            clearInterval(interval)
            images[index++].style.display = "none"
            if(index >= images.length) {
              index = 0
            }
            show_slide(index)
          }
        }, 10)
      }
      
      show_slide(0);
    </script>
    <% include ./footer %>
  </body>
</html>