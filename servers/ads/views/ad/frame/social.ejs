<% width = Math.max(300, Math.min(400, width)); height = 370 %>
<html>
  <head>
    <style>
      html, body {
        background: transparent;
        padding: 0;
        margin: 0;
        overflow: hidden;
        font-family: "Arial";
      }
      
      .container {
        position: relative;
        width: 100%;
        height: <%- height - 25 %>px;
        color: black;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
        border: solid 1px #E6E6E6;
        overflow: hidden;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        background: white;
      }
      
      .sliders {
        position: absolute;
        top: 10px;
        left: 10px;
        right: 10px;
      }
      
      .slider-container {
        float: left;
        padding: 0 2px;
        box-sizing: border-box;
      }
      
      .slider {
        background: rgba(255, 255, 255, 0.6);
        height: 2px;
        border-radius: 15px;
        overflow: hidden;
        z-index: 1;
        position: relative;
        width: 100%;
      }
      
      .slider .slide {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        width: 0;
        background: white;
      }
      
      .grid {
        width: 100%;
        height: <%- height - 76 %>px;
        overflow: hidden;
        background: #E6E6E6;
        position: relative;
        margin: 0;
        padding: 0;
      }
      
      .grid .image {
        width: 100%;
        height: <%- height - 76 %>px;
        background-color: white;
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
        margin-top: 1px;
        display: none;
        position: absolute;
        top: -1px;
        z-index: 0;
      }
      
      .grid .image:first-child {
        margin: 0;
      }
      
      .bottom {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
      }
      
      .bottom .picture {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background-color: black;
        background-position: center center;
        background-repeat: no-repeat;
        background-size: cover;
        display: inline-block;
        float: left;
        border: solid 1px #E6E6E6;
        margin-top: -3px;
      }
      
      .bottom .profile {
        float: left;
        color: #666666;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-weight: 600;
        margin: 6px 0 0 12px;
        cursor: pointer;
        font-size: 16px;
      }
      
      .bottom .profile span {
        font-weight: normal;
      }
      
      .bottom .follow {
        color: #3897F0;
        border: solid 1px #3897F0;
        font-weight: 600;
        float: right;
        padding: 5px 8px;
        border-radius: 3px;
        cursor: pointer;
        font-size: 15px;
      }
      
      .bottom .follow:hover {
        background: #3897F0;
        color: white;
      }
      
      .clear {
        float: none;
        clear: both;
      }
    </style>
  </head>
  <body class="<%= mobile ? "mobile" : "" %>">
    <a class="container" target="_blank" href="/<%- creative.attributed_link(publisher.id, creative.industry_id, is_protected, demo) %>">
      <div class="grid">
        <div class="sliders">
          <% creative.config.images.forEach(function(image) { %>
            <div class="slider-container" style="width: <%- (1/creative.config.images.length) * 100 %>%">
              <div class="slider" <% if(creative.config.images.length < 2) { %>style="display: none"<% } %>>
                <div class="slide"></div>
              </div>
            </div>
          <% }) %>
        </div>
        <% creative.config.images.forEach(function(image) { %>
          <div class="image" style='background-image: url("<%- image %>");'></div>
        <% }) %>
      </div>
      <div class="bottom">
        <div class="picture" style='background-image: url("<%- creative.config.user.profile_image %>")'></div>
        <div class="profile"><%= creative.config.user.username %></div>
        <div class="follow"><%= creative.config.action || "Follow" %></div>
        <div class="clear"></div>
      </div>
    </a>
    <% include ./footer %>
    <script>
      var sliders = document.getElementsByClassName("slide")
      var images = document.getElementsByClassName("image")
      images = Array().slice.call(images || [])
      
      show_slide = function(index) {      
        images[index].style.display = "block"
        sliders[index].style.width = "0%"
        
        var count = 0
        var time = 7000
        var interval = setInterval(function() {
          count += 20
          sliders[index].style.width = (count/time * 100) + "%"
          
          if(count > time) {
            clearInterval(interval)
            sliders[index].style.width = "0%"
            images[index++].style.display = "none"
            if(index >= images.length) {
              index = 0
            }
            show_slide(index)
          }
        }, 10)
      }
      
      show_slide(0);
    </script>
  </body>
</html>