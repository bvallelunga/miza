<form class="form" method="POST" action="/account/password">
  <% include ../../includes/csrf %>
  <% if(next) { %>
    <input type="hidden" name="next" value="<%= next %>" required>
  <% } %>
  <table>
    <tr>
      <td class="title">Old Password</td>
      <td><input class="top" type="password" name="old_password" placeholder="Password" required/></td>
    </tr>
    <tr>
      <td class="title">New Password</td>
      <td><input type="password" name="new_password" placeholder="Password" required/></td>
    </tr>
    <tr>
      <td class="title">Confirm Password</td>
      <td><input class="bottom" type="password" name="confirm_password" placeholder="Password" required/></td>
    </tr>
  </table>
  <button class="button" type="submit">Update Password</button>
  <div class="error"></div>
</form>