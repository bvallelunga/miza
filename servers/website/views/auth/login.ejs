<% include ../includes/start %>
<% include ../includes/header %>
<div class="container">
  <% include ../includes/logo %>
  <span>
    Welcome back! Sign in to see analytics<br>
    and manage your accounts.
  </span>
  <form class="form" method="POST" action="/login">
    <% include ../includes/csrf %>
    <% if(next) { %>
      <input type="hidden" name="next" value="<%= next %>" />
    <% } %>
    <input class="top" type="email" name="email" placeholder="Email address" required/>
    <div class="group">
      <a href="/forgot">Forgot</a>
      <input class="bottom" type="password" name="password" placeholder="Password" required/>
    </div>
    <button class="button" type="submit">Sign In</button>
    <div class="error"></div>
  </form>
</div>
<% include ../includes/footer %>
<% include ../includes/end %>