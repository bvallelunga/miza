<% include ../includes/start %>
<% include ../includes/header %>
<div class="container">
  <% include ../includes/logo %>
  <form class="form" method="POST" action="/register">
    <% include ../includes/csrf %>
    <div>
      <input class="top" type="text" name="name" value="<%= name %>" placeholder="Name" required/>
      <input type="email" name="email" value="<%= email %>" placeholder="Email address" required/>
      <input type="tel" name="phone" placeholder="Phone number (optional, for support)"/>
      <input type="password" name="password" placeholder="Password" required/>
      <input class="bottom" type="password" name="confirm_password" placeholder="Confirm Password" required/>
    </div>
    <div class="checkbox-group">
      <input id="terms-checkbox" type="checkbox" required/>
      <label for="terms-checkbox">
        I agree to the <a target="_blank" href="/legal/terms">Terms of Service</a> 
        and <a target="_blank" href="/legal/privacy">Privacy Policy</a>.
      </label>
    </div>
    <button class="button" type="submit">Sign Up</button>
    <div class="error"></div>
  </form>
</div>
<% include ../includes/footer %>
<% include ../includes/end %>