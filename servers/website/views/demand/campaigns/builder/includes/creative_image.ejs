<div class="section">
  <input type="hidden" name="creative[format]" value="image" required/>
  <div class="header">Creative</div>
  <p>
    After uploading your image, you will have the ability to crop and resize your image.
    Please note the description field is optional.
  </p>
  <br>
  <div class="left split half">
    <table>
      <tr>
        <td>
          <div class="input input-extension">
              <div class="left">
                Image Size
              </div>
              <div class="group right">
                <div class="fa fa-sort"></div>
                <select class="input creative-size" name="creative[size]">
                  <option value="300x250" selected>300x250</option>
                  <option value="728x90">728x90</option>
                  <option value="160x600">160x600</option>
                </select>
              </div>
            </div>
        </td>
      </tr>
      <tr>
        <td>
          <input class="creative-image" name="creative[image_url]" type="hidden" role="uploadcare-uploader" data-crop="300x250 upscale" 
            data-images-only="true" data-clearable required/>
        </td>
      </tr>
    </table>
  </div>
  <div class="right split half">
    <table>
      <tr>
        <td>
          <input class="input" type="url" name="creative[link]" placeholder="Click Link" required/>
        </td>
      </tr>
      <% if(user.is_admin) { %>
        <tr>
          <td>
            <div class="input input-extension">
              <div class="left">
                Ad-Free Browsing after Click
              </div>
              <div class="group right">
                <div class="fa fa-sort"></div>
                <select class="input" name="creative[disable_incentive]">
                  <option value="" selected>Disabled</option>
                  <option value="30">30 mins</option>
                  <option value="60">1 hour</option>
                  <option value="720">12 hours</option>
                  <option value="1440">1 day</option>
                  <option value="10080">1 week</option>
                  <option value="43200">1 month</option>
                </select>
              </div>
            </div>
          </td>
        </tr>
      <% } %>
    </table>
  </div>
  <div class="clear"></div>
  <br><br>
  <textarea class="input" type="text" name="creative[trackers]" placeholder="Impression Tracking Links  (One per line)"></textarea>
</div>

