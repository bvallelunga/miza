<div class="display full builder">
  <form method="POST" action="<%= path %>">
    <div class="section">
      <table>
        <tr>
          <td class="title">Campaign Name</td>
          <td><input class="top" type="text" name="name" placeholder="Campaign Name" required/></td>
        </tr>
<!--
        <tr>
          <td class="title">Daily Budget</td>
          <td>
            <div class="group left-align">
              <div class="fa fa-dollar"></div>
              <input class="top" type="number" name="daily_budget" placeholder="5" required/>
            </div>
          </td>
        </tr>
-->
        <tr>
          <td class="title">Start Date<span>OPTIONAL</span></td>
          <td><input class="top range-display" type="text" name="start_date" placeholder="MM-DD-YYYY"/></td>
        </tr>
        <tr>
          <td class="title">End Date<span>OPTIONAL</span></td>
          <td><input class="top range-display" type="text" name="end_date" placeholder="MM-DD-YYYY"/></td>
        </tr>
      </table>
    </div>
    <div class="section">
      <div class="header">
        Channels <span>(<span class="selection-shortcut" data-for="audience">select all</span>)</span>
      </div>
      <div id="audience" class="selection" data-select="multi">
        <div class="option" data-value="1">
          <div class="metric">
            $5 <span>CPM</span>
          </div>
          <div class="name">Technology</div>
        </div>
        <div class="option" data-value="3">
          <div class="metric">
            $3.5 <span>CPM</span>
          </div>
          <div class="name">Politics</div>
        </div>
        <div class="option" data-value="4">
          <div class="metric">
            $4 <span>CPM</span>
          </div>
          <div class="name">News Agg.</div>
        </div>
        <div class="option" data-value="5">
          <div class="metric">
            $2 <span>CPM</span>
          </div>
          <div class="name">Blogs</div>
        </div>
      </div>
    </div>
    <div class="section">
      <div class="header">Impressions</div>
      <table class="impressions_table hidden">
        <tr>
          <td class="title">Technology</td>
          <td class="metric">
            $4 <span>CPM</span>
          </td>
          <td>
            <div class="group">
              <div class="fa fa-sort"></div>
              <select class="input only" name="impressions[1]" required>
                <% for(var i = 0; i < 2000000; i += 50000) { %>
                  <option value="<%= i + 50000  %>"><%= numeral(i + 50000).format('0,0') %></option>
                <% } %>
              </select>
            </div>
          </td>
          <td class="metric text-right">
            $5000
          </td>
        </tr>
      </table>
      <div class="impressions_empty">
        Please Select A Channel
      </div>
    </div>
    <div class="section">
      <% include ../../../includes/csrf %>
      <button type="submit" class="button">
        Create Campaign <span class="fa fa-arrow-right"></span>
      </button>
      <div class="error"></div>
    </div>
  </form>
</div>