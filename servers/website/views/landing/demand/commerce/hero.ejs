<div id="hero" class="hero commerce dark-navigation">
  <div class="container">
    <% include ../../header %>
    <div class="examples">
      <iframe src="<%= LIBS.models.Creative.example_frame("kickstarter") %>" onload="this.style.display='block';"></iframe>
      <iframe src="<%= LIBS.models.Creative.example_frame("etsy") %>" onload="this.style.display='block';"></iframe>
    </div>
    
    <header class="header">
      <h1>Grow awareness for your products!</h1>
      <h2>
        Have your Amazon, Etsy, Kickstarter, and Indiegogo products seen by millions daily.
      </h2>
      <div class="actionable">
        <form class="form" method="POST" action="/register">
          <% include ../../../includes/csrf %>
          <input type="hidden" name="type" value="demand" />
          <input class="top-short left" name="name" type="text" placeholder="Micheal Scott" required/>
          <input class="top-long right" name="email" type="email" placeholder="micheal.scott@dunderm.com"/>
          <div class="clear"></div>
          <input class="last" name="password" type="password" placeholder="Strong Password" required/>
          <button class="button">Create Account</button>
          <div class="clear"></div>
          <div class="error"></div>
        </form>
      </div>
    </header>
    <div class="clear"></div>
  </div>
</div>