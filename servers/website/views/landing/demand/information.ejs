  <h2>
    <%= company %> works seamlessly with the
    social networks<br>and commerce stores you use!
  </h2>
  <div class="images">
    <a href="/demand/social">
      <img src="/imgs/demand/i.png?<%= random %>"/>
    </a>
    <a href="/demand/social">
      <img src="/imgs/demand/t.png?<%= random %>"/>
    </a>
    <a href="/demand/music">
      <img src="/imgs/demand/s.png?<%= random %>"/>
    </a>
    <a href="/demand/commerce">
      <img src="/imgs/demand/a.png?<%= random %>"/>
    </a>
    <a href="/demand/commerce">
      <img src="/imgs/demand/k.png?<%= random %>"/>
    </a>
    <a href="/demand/commerce">
      <img src="/imgs/demand/e.png?<%= random %>"/>
    </a>
  </div>
</div>
