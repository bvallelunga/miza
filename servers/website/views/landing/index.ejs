<% include ../includes/start %>
<div class="fixed-side-nav">
  <a class="inverse" href="tel:<%= support_phone_clean %>"><%= support_phone %></a>
  <a href="mailto:<%= support_email %>">Contact Us</a>
</div>
<div class="hero">
  <div class="container">
    <div class="hero-image left">
      <img src="/imgs/hero.png"/>
    </div>
    <div class="hero-information right">
      <% include ../includes/logo %>
      <h2 class="hook">
        Recapture lost ad revenue.
      </h2>
      <p class="explanation">
        Watch ads magically reappear on your website with Sledge! 
        Let us worry about Ad Blockers, so you can focus on what is important. 
      </p>
      <div class="actionable">
        <form class="form" method="POST" action="/beta">
          <% include ../includes/csrf %>
          <input name="email" type="email" placeholder="Enter your email" required/>
          <button class="button">Request Access</button>
        </form>
        <div class="login">
          <span>or</span>
          <a href="/<%= user ? "dashboard" : "login" %>">
            <button class="button"><%= user ? "Dashboard" : "Sign In" %></button>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="supported">
  <span class="item text">
    Sledge works great with<br>
    all the ad publishers you use!
  </span>
  <span class="item">
    <img class="item" src="/imgs/ZGZw.png"/>
  </span>
  <span class="item disabled">
    <img src="/imgs/YWRyb2xs.png"/>
    <div class="message">coming soon</div>
  </span>
  <span class="item disabled">
    <img src="/imgs/bGl2ZXJhaWw=.png"/>
