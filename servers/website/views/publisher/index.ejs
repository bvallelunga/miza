<% include ../includes/start %>
<div class="company_list">
  <div class="current">
    <%= publisher.full_name() %>
    <span class="fa fa-sort"></span>
  </div>
  <div class="companies">
    <% if(!user.is_demo) { %>
      <a href="/publisher/new">
        <span class="fa fa-plus"></span>
        New Publisher
      </a>
    <% } %>
    <% if(user.is_admin) { %>
      <div class="group">
        <span class="fa fa-search"></span>
        <input class="company-search" placeholder="Name"/>
      </div>
    <% } %>
    <% (props.publishers || user.publishers).forEach(function(pub) { %>
      <% if (pub.id != publisher.id) { %>
        <a class="company-link" href="/publisher/<%= pub.key %>/<%= dashboard %>">
          <%= pub.full_name() %>
        </a>
      <% } %>
    <% }) %>
  </div>
</div>
<% if(guide) { %>
  <%- include("./guide/" + publisher.product) %>
<% } %>
<% include ../includes/navigation %>
<div class="container <%= dashboard_size %>">
  <% include ./payout_warning %>
  <div class="display full <%= dashboard %>-dashboard">
    <%- include("./" + dashboard + "/index") %>
  </div>
  <div class="clear"></div>
</div>
<% include ../includes/footer %>
<% include ../includes/end %>