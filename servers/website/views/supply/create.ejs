<% include ../includes/start %>
<% include ../includes/navigation %>
<div class="container" style="padding-top: 50px;">
  <span>
    Let's get started! We just need a<br>couple details about your account.
  </span>
  <form class="form" method="POST" action="<%= path %>">
    <% include ../includes/csrf %>
    <input class="name top" type="text" name="publisher_name" placeholder="Publisher Name" required/>
    <input class="email" type="url" name="publisher_domain" placeholder="http://publisher.com" required/>
    <div class="group publisher_industry">
      <div class="fa fa-sort"></div>
      <select class="input" name="publisher_industry" required>
        <option disabled="true" selected>Select Industry</option>
        <% industries.forEach(function(industry) { %>
          <option value="<%= industry.id %>"><%= industry.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="group">
      <div class="fa fa-sort"></div>
      <select class="input" name="dns" required>
        <option disabled="true" selected>Have access to your DNS?</option>
        <option value="true">Yes I do</option>
        <option value="false">No I don't</option>
      </select>
    </div>
    <div class="group">
      <div class="fa fa-sort"></div>
      <select class="input" name="cloudflare" required>
        <option disabled="true" selected>Does Cloudflare host your DNS?</option>
        <option value="true">Yes they do</option>
        <option value="false">No they don't</option>
        <option value="false">What is Cloudflare?</option>
      </select>
    </div>
    <div class="group">
      <div class="fa fa-sort"></div>
      <select class="input bottom" name="ssl" required>
        <option disabled="true" selected>Does your site use SSL?</option>
        <option value="true">Yes it does</option>
        <option value="false">No it doesn't</option>
      </select>
    </div>
    <button class="button" type="submit">Create Publisher Account</button>
    <div class="error"></div>
  </form>
</div>
<% include ../includes/footer %>
<% include ../includes/end %>